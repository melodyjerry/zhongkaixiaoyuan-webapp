        <view class="page__title">MelodyJerry</view>
        <view class="page__desc">书写是对思维的缓存</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
           
            <view class="weui-cell">
                <view class="weui-cell__bd">微信</view>
