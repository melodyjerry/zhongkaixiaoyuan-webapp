            </view>
             <view class="weui-cell">
                <view class="weui-cell__bd">QQ</view>
                <view class="weui-cell__ft" bindtap="copyQQ"></view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">个人邮箱</view>
                <view class="weui-cell__ft" bindtap="copyEmail">melodyjerry@qq.com</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">个人博客</view>
                <view class="weui-cell__ft" bindtap="copyBlog">https://melodyjerry.gitee.io</view>
            </view>
            
        </view>
